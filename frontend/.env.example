# API Service URLs
REACT_APP_AUTH_SERVICE_URL=http://localhost:3001
REACT_APP_USER_SERVICE_URL=http://localhost:3002
REACT_APP_COURSE_SERVICE_URL=http://localhost:3003
REACT_APP_AI_SERVICE_URL=http://localhost:8000

# Application Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_APP_NAME="AI Training & Recruitment System"
REACT_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Cache Configuration
REACT_APP_CACHE_TTL=300000

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_LOGGER=true